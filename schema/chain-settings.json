{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "chain-settings.json",
  "title": "Chain Settings",
  "description": "Preferences about what services are available for a chain",
  "type": "object",
  "properties": {
    "simulations_enabled": {
      "type": "boolean"
    },
    "zaps_enabled": {
      "type": "boolean"
    }
  },
  "required": ["simulations_enabled", "zaps_enabled"]
}
